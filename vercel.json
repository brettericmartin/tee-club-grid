{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.22",
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/recalc-beta-stats",
      "schedule": "0 */6 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}